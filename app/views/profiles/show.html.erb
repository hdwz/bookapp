<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      <img class="card-img-top" src="<%= @profile.picture %>" alt="Card image cap" width="100%">
      <div class="card-block">
        <h4 class="card-title"><%= @profile.full_name %></h4>
        <p class="card-text">Profession: <br><%= @profile.profession%></p>
        <p class="card-text">About: <br><%= @profile.about %></p>
        <p class="card-text">Publications: <br><%= @profile.publications%></p>
        <p class="card-text">Awards: <br><%= @profile.awards %></p>
        <% if current_user == @profile.user %>
          <%= link_to 'Edit', edit_profile_path(@profile), class:"btn btn-primary btn-sm"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
